<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/grad_bg"
    tools:context=".home.MeniuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

             <ImageView
                 android:id="@+id/imgInfo"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:src="@drawable/info"
                 android:layout_marginTop="22dp"
                 android:layout_gravity="right"
                 android:layout_marginEnd="30dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMaterii"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStart">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/subject"
                        android:layout_marginTop="32dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/materii"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="26sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvNote"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/edu"
                        android:layout_marginTop="32dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/note"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="26sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvRestante"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStart">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/crying"
                        android:layout_marginTop="32dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/restan_e"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="26sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:id="@+id/cvPlati"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/bani" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="28dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="@string/pl_i"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="26sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvExamene"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStart">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/clock"
                        android:layout_marginTop="32dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assignments"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="26sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:id="@+id/cvInfo"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/communications" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="28dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="@string/informa_ii"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="26sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfil"
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStart">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/profile"
                        android:layout_marginTop="32dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profil"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="26sp"
                        android:layout_marginTop="28dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:id="@+id/cvAse"
                android:layout_height="170dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/gradStop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/logoase" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="28dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="@string/a_s_e"
                        android:textAllCaps="false"
                        android:textColor="@color/gray"
                        android:textSize="26sp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>






        </GridLayout>

    </LinearLayout>


</ScrollView>